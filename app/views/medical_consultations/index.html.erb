<h1>Listing medical_consultations</h1>

<table>
  <thead>
    <tr>
      <th>Doctor</th>
      <th>Date</th>
      <th>Syntoms</th>
      <th>Specialization</th>
      <th>Reason</th>
      <th>Medical opinion</th>
      <th>Prescription</th>
      <th>Ordered tests</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @medical_consultations.each do |medical_consultation| %>
      <tr>
        <td><%= medical_consultation.doctor_id %></td>
        <td><%= medical_consultation.date %></td>
        <td><%= medical_consultation.syntoms %></td>
        <td><%= medical_consultation.specialization_id %></td>
        <td><%= medical_consultation.reason %></td>
        <td><%= medical_consultation.medical_opinion %></td>
        <td><%= medical_consultation.prescription %></td>
        <td><%= medical_consultation.ordered_tests %></td>
        <td><%= link_to 'Show', medical_consultation %></td>
        <td><%= link_to 'Edit', edit_medical_consultation_path(medical_consultation) %></td>
        <td><%= link_to 'Destroy', medical_consultation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

